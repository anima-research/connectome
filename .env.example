# Bot Framework Configuration
# Rename this file to .env and customize the values for your environment

# ==================================================
# Adapter Connection Settings
# ==================================================

# Default adapter connection if not using multiple adapters
DEFAULT_ADAPTER_URL=http://localhost:5000
DEFAULT_ADAPTER_TOKEN=your_auth_token_here

# Multiple adapters configuration (JSON array of adapter configs)
# Each adapter should have:
# - id: Unique identifier for the adapter
# - name: Human-readable name
# - url: Socket.IO server URL
# - auth_token: Authentication token
# - platforms: Array of platform names this adapter handles
ADAPTERS=[
  {
    "id": "slack",
    "name": "Slack Adapter",
    "url": "http://localhost:5001",
    "auth_token": "slack_adapter_token", 
    "platforms": ["slack"]
  },
  {
    "id": "discord",
    "name": "Discord Adapter",
    "url": "http://localhost:5002",
    "auth_token": "discord_adapter_token",
    "platforms": ["discord"]
  }
]

# ==================================================
# LLM Settings
# ==================================================

# LiteLLM Configuration (Used to communicate with LLM providers)
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1  # Only needed for custom endpoints

# Additional LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=3000
LLM_RETRY_COUNT=3

# ==================================================
# Agent Settings
# ==================================================

# Bot identification
BOT_ID=assistant
BOT_NAME=Assistant

# Protocol Settings
DEFAULT_PROTOCOL=react  # Options: react, function_calling

# Context Management
MAX_HISTORY_TOKENS=12000
COMPRESS_CONTEXT_THRESHOLD=20  # Number of messages before compression

# ==================================================
# Logging Settings
# ==================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/bot_framework.log
LOG_FILE_ROTATION=1d  # Options: 1d, 1w, 1m

# ==================================================
# Tool Settings
# ==================================================

# Web Search Tool
SEARCH_API_KEY=your_search_api_key
SEARCH_API_URL=https://api.search.com

# Custom Tool APIs
WEATHER_API_KEY=your_weather_api_key
EMAIL_SERVICE_API_KEY=your_email_service_api_key 