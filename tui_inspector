#!/usr/bin/env python3
"""
Connectome TUI Inspector Entry Point

Standalone script to launch the TUI inspector.
"""

import asyncio
import sys
from pathlib import Path

# Add the connectome root to the Python path
sys.path.insert(0, str(Path(__file__).parent))

from host.modules.inspector.standalone_tui import main

if __name__ == "__main__":
    try:
        exit_code = asyncio.run(main())
        sys.exit(exit_code)
    except KeyboardInterrupt:
        print("\nðŸ‘‹ Goodbye!")
        sys.exit(130)